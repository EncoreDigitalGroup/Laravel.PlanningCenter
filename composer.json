{
    "name": "encoredigitalgroup/laravel-planningcenter",
    "description": "Laravel Wrapper for EncoreDigitalGroup/PlanningCenter-PHP-SDK",
    "keywords": [
        "encoredigitalgroup",
        "laravel",
        "laravel-planningcenter"
    ],
    "homepage": "https://github.com/encoredigitalgroup/laravel-planningcenter",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Beinder",
            "email": "marc@marcbeinder.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "EncoreDigitalGroup\\PlanningCenter\\": "src/",
            "EncoreDigitalGroup\\PlanningCenter\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EncoreDigitalGroup\\PlanningCenter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "EncoreDigitalGroup\\PlanningCenter\\PlanningCenterServiceProvider"
            ],
            "aliases": {
                "PlanningCenter": "EncoreDigitalGroup\\PlanningCenter\\Facades\\PlanningCenter"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}